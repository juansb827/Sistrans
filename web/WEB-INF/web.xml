<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>com.bancandes.servlets.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMenuAdmin</servlet-name>
        <servlet-class>com.bancandes.servlets.ServletMenuAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRegistrarUsuario</servlet-name>
        <servlet-class>com.bancandes.servlets.ServletRegistrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCuentas</servlet-name>
        <servlet-class>com.bancandes.servlets.ServletCuentas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPrestamos</servlet-name>
        <servlet-class>com.bancandes.servlets.ServletPrestamos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletConsultas</servlet-name>
        <servlet-class>com.bancandes.servlets.ServletConsultas</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMenuAdmin</servlet-name>
        <url-pattern>/ServletMenuAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRegistrarUsuario</servlet-name>
        <url-pattern>/ServletRegistrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCuentas</servlet-name>
        <url-pattern>/ServletCuentas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPrestamos</servlet-name>
        <url-pattern>/ServletPrestamos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletConsultas</servlet-name>
        <url-pattern>/ServletConsultas</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
